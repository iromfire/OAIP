<Window x:Class="OAIP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autorization" Height="350" Width="525" MinHeight="350" MinWidth="525" MaxHeight="350" MaxWidth="525">
    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="36"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="170" Margin="106,56,106,55" Width="300">
            <TextBlock Text="Добро пожаловать в ОАИП" FontSize="20" FontFamily="Arial Black" Margin="0 0 0 20" />
            <TextBox x:Name="UsernameTextbox" Width="250" Height="30" />
            <TextBox x:Name="PasswordBox" Width="250" Height="30" Margin="0 10 0 0" />
            <Button Content="Войти" Background="CadetBlue" Width="100" Height="30" Margin="-150 20 0 0" Click="LoginButton_Click" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="Гость" Background="CadetBlue" Width="100" Height="30" Margin="150 -30 0 0" Click="LoginGuestButton_Click" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
