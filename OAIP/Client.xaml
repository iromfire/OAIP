<Window x:Class="OAIP.Goods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Goods" Height="700" Width="800" MinHeight="700" MinWidth="800" MaxHeight="800" MaxWidth="700" Background="LightYellow">
    <Grid>
        <DataGrid Name="dataGrid1" SelectionChanged="dataGrid1_SelectionChanged" Margin="10,43,10,10" />
        <Button Content="Назад" Background="CadetBlue" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="112" Height="29" Click="Button_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Корзина"  Background="CadetBlue" HorizontalAlignment="Left" Margin="670,5,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_1" Height="29">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ComboBox x:Name="ComboBoxFilter" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxFilter_SelectionChanged"/>

    </Grid>
</Window>
